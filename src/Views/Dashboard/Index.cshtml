@using RunGroupWebApp.ViewModels
@model DashboardViewModel

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Dashboard</h1>
    <div class="col-lg-6 mx-auto">
        <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
            <a class="btn btn-primary btn-lg px-4 gap-3" asp-controller="Race" asp-action="Create">
                Create new Race
            </a> 
            <a class="btn btn-primary btn-lg px-4 gap-3" asp-controller="Club" asp-action="Create">
                Create new Club
            </a>
            <a class="btn btn-secondary btn-lg px-4 gap-3" asp-controller="Dashboard" asp-action="EditMyProfile">
                Edit my profile
            </a>
        </div>
    </div>
</div>

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Your Races</h1>
    <div class="album py-5 bg-light">
        @if (Model.Races?.Count > 0)
        {
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var item in Model.Races)
                {
                    <div class="col">
                        <div class="card shadow-sm">
                            <a href="~/Race/Detail/@item.Id">
                                <div class="card shadow-sm" align="center">
                                    <h4 x="50%" y="50%" fill="#eceeef" dy=".3em">
                                        @item.Title
                                    </h4>
                                    <img src="@item.Image" />
                                </div>
                            </a>
                            <div class="card-body">
                                <p class="card-text">@item.Description</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a asp-controller="Race" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            View
                                        </a>
                                        <a asp-controller="Race" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                            Edit
                                        </a>
                                        <a asp-controller="Race" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            Delete
                                        </a>
                                    </div>
                                    <small class="text-muted">@item.RaceCategory</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        }
        else
        {
            <h4 class="text-warning">You don't have Races yet. Create your first one!</h4>
        }
    </div>
</div>

<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Your Clubs</h1>
    <div class="album py-5 bg-light">
        @if (Model.Clubs?.Count > 0)
        {
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                @foreach (var item in Model.Clubs)
                {
                <div class="col">
                    <div class="card shadow-sm">
                        <a href="~/Club/Detail/@item.Id">
                            <div class="card shadow-sm" align="center">
                                <h4 x="50%" y="50%" fill="#eceeef" dy=".3em">
                                    @item.Title
                                </h4>
                                <img src="@item.Image"/>
                            </div>
                        </a>
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="Club" asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                        View
                                    </a>
                                    <a asp-controller="Club" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                        Edit
                                    </a>
                                    <a asp-controller="Club" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                        Delete
                                    </a>
                                </div>
                                <small class="text-muted">@item.ClubCategory</small>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
        }
        else
        {
            <h4 class="text-warning">You don't have Clubs yet. Create your first one!</h4>
        }
    </div>
</div>
