@using RunGroupWebApp.Data.Enum;
@model Race
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="AddressId" value="@Model.AddressId"/>
    <input type="hidden" asp-for="Image" value="@Model.Image"/>
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="title"/>
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="description"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RaceCategory">Club category</label>
        <select asp-for="RaceCategory" asp-items="@Html.GetEnumSelectList<RaceCategory>()" class="form-control" placeholder="club category"></select>
        <span asp-validation-for="RaceCategory" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save Race</button>
</form>